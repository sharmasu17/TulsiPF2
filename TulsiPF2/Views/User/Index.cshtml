@model TulsiPF2.Models.User
@{
    ViewBag.Title = "Index";
}


<!DOCTYPE html>

<h3>Login</h3>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Login </title>

</head>
<body>
