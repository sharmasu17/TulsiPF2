<div class="row">
    <div class="col-md-7">

        <div id="mycarousel" class="carousel slide" data-ride="carousel" style="margin-top:auto">
            <ol class="carousel-indicators">
                <li data-target="#mycarousel" data-slide-to="0" class="active"></li>
