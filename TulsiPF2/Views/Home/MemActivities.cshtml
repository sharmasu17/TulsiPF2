
@{
    ViewBag.Title = "Member Activities";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Member Data</h2>

@* @Html.DropDownList("Memberdata", null, new { onchange = "document.location.href='/Members/Index'" })    commented line*@

@Html.DropDownList("Memberdata", null, new { onchange = "checkselected()" })


<script src="~/Scripts/jquery-3.4.1.min.js"></script>

<script>

    function checkselected()
    {
        if ($('#Memberdata').val() == '1')
        {
            document.location.href = '/Members/Index';
        }

        if ($('#Memberdata').val() == '2')
        {
            document.location.href = '/DonationTabs/Index';
        }

        if ($('#Memberdata').val() == '3')
        {
            document.location.href = '/ImageTabs/AddImage';
        }
        
    }
</script>